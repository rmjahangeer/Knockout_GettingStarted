
@{
    ViewBag.Title = "Index";
}
@section component
{
    <script src="~/Areas/Shop/Scripts/ko/cart.page.js"></script>
}

<!-- BREADCRUMB -->
<div id="breadcrumb">
    <div class="container">
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Checkout</li>
        </ul>
    </div>
</div>
<!-- /BREADCRUMB -->
<!-- section -->
<div class="section" id="cart-page">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <form id="checkout-form" class="clearfix">
                <div class="col-md-12">
                    <div class="order-summary clearfix">
                        <!-- ko if:products().length === 0-->
                        <div class="section-title">
                            <h3 class="title">
                                <a class="btn btn-default" href="@Url.Action("Catalog", "Products")">
                                    <i class="fa fa-cart-plus"></i>&nbsp;<strong>Add</strong>
                                </a> some products to your cart !
                            </h3>
                        </div>
                        <!--/ko-->
                        <!-- ko if:products().length !== 0-->
                        <div class="section-title">
                            <h3 class="title">Order Review (<span data-bind="text : products().length"></span> Items)</h3>
                        </div>
                        <table class="shopping-cart-table table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th></th>
                                    <th class="text-center">Price</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-center">Total</th>
                                    <th class="text-right"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--ko foreach : products-->
                                <tr>
                                    <td class="thumb"><img data-bind="attr:{src:Image}" alt=""></td>
                                    <td class="details">
                                        <a href="#" data-bind="text:Name"></a>
                                        <ul>
                                            <li>Category: <span data-bind="text:CategoryName"></span></li>
                                            @*<li><span data-bind="text:Size">Size: XL</span></li>
                                                <li><span data-bind="text:Color">Color: Camelot</span></li>*@
                                        </ul>
                                    </td>
                                    <td class="price text-center">
                                        <strong>$<span data-bind="text: Price"></span></strong><br>
                                        @*<del class="font-weak"><small>$40.00</small></del>*@
                                    </td>
                                    <td class="qty text-center">
                                        <input class="input" min="1" type="number" value="1" data-bind="textInput : Quantity">
                                    </td>
                                    <td class="total text-center"><strong class="primary-color" data-bind="text : $root.productTotal($data)"></strong></td>
                                    <td class="text-right">
                                        <button type="button" class="main-btn icon-btn" data-bind="click : $root.removeProduct">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </td>
                                </tr>
                                <!-- /ko -->
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>SUBTOTAL</th>
                                    <th colspan="2" class="sub-total" data-bind="text : subTotal"></th>
                                </tr>
                                <tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>SHIPING</th>
                                    <td colspan="2">Free Shipping</td>
                                </tr>
                                <tr>
                                    <th class="empty" colspan="3"></th>
                                    <th>TOTAL</th>
                                    <th colspan="2" class="total" data-bind="text : subTotal"></th>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="pull-right">
                            <button class="primary-btn" type="button" data-bind="click : $root.placeOrder">Place Order</button>
                        </div>
                        <!-- /ko-->
                    </div>

                </div>
            </form>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /section -->
