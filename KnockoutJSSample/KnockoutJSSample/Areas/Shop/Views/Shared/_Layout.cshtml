@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Hind:400,700" rel="stylesheet">
    <link href="~/Content/select2.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/bootstrap.min.css" />

    <!-- Slick -->
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/slick-theme.css" />

    <!-- nouislider -->
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/nouislider.min.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="~/Areas/Shop/Content/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/style.css" />
    <link type="text/css" rel="stylesheet" href="~/Areas/Shop/Content/css/custom.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("head", required: false)
</head>
<body>
    <div id="top-nav">
        <div class="lds-dual-ring" style="display: none" data-bind="visible: loadingData()"></div>
        <!-- HEADER -->
        @Html.Partial("Partials/_Header")
        <!-- /HEADER -->

        @Html.Partial("Partials/_Categories")
    </div>

    <div id="@ViewBag.PageId">
        @RenderBody()
        <div class="notice-wrapper">
            @{
                string flash = TempData["Flash"] as string;
                if (flash != null)
                {
                    <style>
                        .alert-dismissable .close, .alert-dismissible .close {
                            position: relative;
                            top: -2px;
                            color: inherit;
                        }
                    </style>
                    <div class="show notice error notice-error alert alert-dismissible" style="position: fixed; top: 0">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span class="notice-message">@flash</span>

                    </div>
                }   
            }
        </div>
    </div>
    <!-- FOOTER -->
    @Html.Partial("Partials/_Footer")
    <!-- /FOOTER -->
    <script>
        window.searchPage = '@Url.Action("Catalog","Products", new { area = "Shop"})';
        window.isUserLoggedIn = '@Request.IsAuthenticated' === "True";
        window.username = '@User.Identity.GetUserName()';
        window.userId = '@User.Identity.GetUserId()';
        window.loginPage = '@Url.Action("Login","Account",new {area=""})?returnUrl=';
        window.cartPage = '@Url.Action("Index","Cart",new {area="Shop"})';
        window.checkoutPage = '@Url.Action("New","Checkouts",new {area="Shop"})';
        window.homePage = '@Url.Action("Index","Home",new {area="Shop"})';
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!-- jQuery Plugins -->
    @*<script src="~/Areas/Shop/Scripts/js/jquery.min.js"></script>*@
    <script src="~/scripts/jquery-ui-1.12.1.js" type="text/javascript"></script>
    <script src="~/scripts/knockout-3.4.2.js" type="text/javascript"></script>
    <script src="~/Scripts/custom.ko.bindings.js"></script>
    <script src="~/Scripts/knockout.mapping-latest.js"></script>
    <script src="~/scripts/select2.full.js"></script>
    <script src="~/Scripts/underscore-min.js"></script>
    @*<script src="~/Areas/Shop/Scripts/js/bootstrap.min.js"></script>*@
    <script src="~/Areas/Shop/Scripts/js/slick.min.js"></script>
    <script src="~/Areas/Shop/Scripts/js/nouislider.min.js"></script>
    <script src="~/Areas/Shop/Scripts/js/jquery.zoom.min.js"></script>
    <script src="~/Areas/Shop/Scripts/js/main.js"></script>
    <script src="~/Areas/Shop/Scripts/ko/layout.js"></script>
    @RenderSection("component", required: false)

</body>
</html>
