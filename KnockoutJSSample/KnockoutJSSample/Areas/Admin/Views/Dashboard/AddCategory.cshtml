<h2>@ViewBag.Title</h2>
<small><a href="@Url.Action("Category")">All Categories</a></small>

@section scripts
{
    <script>
        window.view = 'Create';
        window.categoryId = parseInt('@(ViewBag.id ?? 0)');
        window.editMode = window.categoryId ? true : false;
        window.redirectUrl = '@Url.Action("Category")';
    </script>
    <script src="~/Areas/Admin/Scripts/category.create.js" type="text/javascript"></script>
}

<form class="form-horizontal" data-bind="submit : save, with : category">
    <div class="form-group">
        <label>Category Name</label>
        <input type="text" class="form-control" data-bind="textInput : Name" />
    </div>
    <div class="form-group">
        <label>Main Category</label>
        <select data-bind="options: $root.categories, optionsValue: 'Id', optionsText: 'Name', value: ParentId, select2: {placeholder: 'Select a main category', allowClear: true }" style="width: 150px"></select>
    </div>

    <div class="form-group">
        <button class="btn btn-success" data-bind="enable : $root.isFormValid">Save</button>
    </div>
</form>